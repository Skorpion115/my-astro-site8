---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getPageUrl } from "../utils/getPageUrl.js";

const pageTitle = "Download Noten & BackingTrack";
const description = "Hier kannst du die gekauften Noten und das BackingTrack herunterladen.";
const keywords = "Gitarrennoten, BackingTrack, Download";
const pageUrl = getPageUrl(Astro);

// Dateien-Links (ersetze die URLs durch deine tatsächlichen Download-Links)
const pdfLink = "/bilder/rose_room_solo.pdf";
const mp3Link = "/songs/rose_room_backingtrack.mp3";
---

<BaseLayout
  pageTitle={pageTitle}
  description={description}
  keywords={keywords}
  href={pageUrl}
  ogTitle={pageTitle}
  ogDescription={description}
  ogUrl={pageUrl}
  ogType="website"
  twitterTitle={pageTitle}
  twitterDescription={description}
  twitterUrl={pageUrl}
>
  <h2>Dein Download</h2>
  <p>
    Vielen Dank für deinen Kauf! Klicke auf die folgenden Links, um deine Dateien herunterzuladen:
  </p>

  <ul>
    <li><a href="bilder/rose_room_solo.pdf" download>Rose Room Solo (PDF)</a></li>
    <li><a href="songs/rose_room_backingtrack.mp3" download>Rose RoomBackingTrack (MP3)</a></li>
  </ul>

  <br>
  <p>
    <a href="/" class="normal-links">Zurück zur Startseite</a>
  </p>
</BaseLayout>
