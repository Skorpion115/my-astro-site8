---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getPageUrl } from "../utils/getPageUrl.js";

const pageTitle = "Noten & BackingTrack kaufen";
const description = "Kaufe jetzt die Noten und das BackingTrack für dein Lieblingslied.";
const keywords = "Gitarrennoten, BackingTrack, Kauf";
const pageUrl = getPageUrl(Astro);

// PayPal-Button-Setup
// Hier dein PayPal-Button-Link (Buy Now / Smart Button)
// PayPal-Link mit automatischem Return
const paypalLink = "https://www.paypal.com/cgi-bin/webscr?cmd=_xclick&business=musikstudio.ziebart@gmail.com&item_name=Noten+%2B+BackingTrack&amount=9.95&currency_code=EUR&return=https://www.musicstudio-ziebart.de/produkt-download&rm=2";
---

<BaseLayout
  pageTitle={pageTitle}
  description={description}
  keywords={keywords}
  href={pageUrl}
  ogTitle={pageTitle}
  ogDescription={description}
  ogUrl={pageUrl}
  ogType="website"
  twitterTitle={pageTitle}
  twitterDescription={description}
  twitterUrl={pageUrl}
>
  <h2>Jetzt kaufen</h2>
  
  <p>
  Hol dir die <strong>
  Noten Rose Room Solo + Rose Room Rhythm Guitar + Rose Room Bass + BackingTrack + Rose Room Mastering
  </strong> für dein Gitarrenspiel.  
  <br>
  Sofortiger Download nach Zahlung.
  </p>

  <div class="content-left">

  <p>
    Hol dir die <strong>Noten Rose Room Solo (PDF) + Rose Room Rhythm Guitar (PDF) + Rose Room Bass (PDF) + Rose Room BackingTrack (MP3) + Rose Room Mastering (MP3)</strong>.
    Sofortiger Download nach Zahlung.
  </p>

  <table class="price-table">
    <tr>
      <th>Produkt</th>
      <td>Rose Room – Complete Pack</td>
    </tr>
    <tr>
      <th>Preis netto</th>
      <td>8,36 €</td>
    </tr>
    <tr>
      <th>19 % MwSt</th>
      <td>1,59 €</td>
    </tr>
    <tr>
      <th>Gesamtpreis</th>
      <td><strong>9,95 €</strong></td>
    </tr>
  </table>

  <p class="vat-note">
    inkl. 19 % MwSt. – Downloadprodukt
  </p>

  <a href={paypalLink} target="_blank" class="paypal-button">
    Mit PayPal sicher bezahlen
  </a>

  </div>
  

<p class="vat-note">
  <small>Alle Preise inkl. gesetzlicher Umsatzsteuer (19 %).</small>
</p>

  <br><br>
  <p>
    <a href="/" class="normal-links">Zurück zur Startseite</a>
  </p>
</BaseLayout>