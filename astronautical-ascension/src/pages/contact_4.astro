const SITE_URL = import.meta.env.SITE_URL || "https://www.musicstudio-ziebart.de";
const pageUrl = `${SITE_URL}/contact_4/`;
---

<BaseLayout
  pageTitle={pageTitle}
  description="Falls Sie Fragen haben, k√∂nnen Sie mir gerne eine kurze Mitteilung schicken. Ich werde Sie zur√ºckrufen! üòÄ"
  keywords="ich rufe sie zur√ºck, r√ºckruf"
