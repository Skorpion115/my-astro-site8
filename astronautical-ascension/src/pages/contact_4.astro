const pageTitle = "Ich rufe Sie zur√ºck!";
const SITE_URL = import.meta.env.SITE_URL || "https://www.musicstudio-ziebart.de";
const pageUrl = `${SITE_URL}/contact_4/`;
---

<BaseLayout
  pageTitle={pageTitle}
  description="Falls die Fragen haben k√∂nnen sie mir gerne eine kurze Mitteilung schicken. Ich werde sie zur√ºck rufen! üòÄ"
  keywords="ich rufe sie zur√ºck, r√ºckruf"
  href={pageUrl}
>
<br />
  <div class="container4">
    <form
      name="contact_4"
      method="POST"
      action="/danke-seite/"
      data-netlify="true"
      netlify-honeypot="bot-field"
    >
      <!-- Honeypot field (invisible to users) -->
      <p style="display:none">
        <label
          >Don‚Äôt fill this out if you're human: <input
            name="bot-field"
          /></label
        >
      </p>

      <input type="hidden" name="form-name" value="contact_4" />

      <div>
        <label for="name">Name:</label>
        <input
          type="text"
          autocomplete="name"
          id="name"
          name="name"
          placeholder="Namen eintragen"
          class="form-control form-control-lg"
          required
        />
      </div>

      <div>
        <label for="subject">Betreff:</label>
        <input
          name="subject"
          type="text"
          id="subject"
          maxlength="30"
          placeholder="R√ºckruf"
          class="form-control form-control-lg"
        />
      </div>

      <div>
        <label for="message">Nachricht:</label>
        <textarea
          id="message"
          name="message"
          cols="23"
          rows="10"
          placeholder="Bitte um R√ºckruf"></textarea>
      </div>

      <div>
        <label for="phone">Telefonnummer:</label>
        <input
          type="tel"
          id="phone"
          autocomplete="tel-national"
          name="phone"
          class="form-control form-control-lg"
          required
        />
      </div>

      <div>
        <label for="email">E-Mail:</label>
        <input
          type="email"
          id="email"
          autocomplete="email"
          name="email"
          class="form-control form-control-lg"
        />
      </div>

      <br />
