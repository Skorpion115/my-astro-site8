          class="form-control form-control-lg"
        />
      </div>

      <div>
        <label for="message">Nachricht:</label>
        <textarea
          id="message"
          name="message"
          cols="23"
          rows="10"
          placeholder="Bitte um R√ºckruf"></textarea>
      </div>

      <div>
        <label for="phone">Telefonnummer:</label>
        <input
          type="tel"
          id="phone"
          autocomplete="tel-national"
          name="phone"
          class="form-control form-control-lg"
          required
        />
      </div>

      <div>
        <label for="email">E-Mail:</label>
        <input
          type="email"
          id="email"
          autocomplete="email"
          name="email"
          class="form-control form-control-lg"
          required
        />
      </div>

      <br />
      <button type="submit" class="btn btn-lg btn-primary">Absenden</button>
    </form>
  </div>
</BaseLayout>
