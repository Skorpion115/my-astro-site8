---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PaypalButton from "../../components/PaypalButton.astro";
import { getPageUrl } from "../../utils/getPageUrl.js";

const pageTitle = "Noten & BackingTrack kaufen";
const description =
  "Gitarrensolo zu »Rose Room« als PDF. Ideal für Jazz-Gitarre. Sofort-Download nach Zahlung.";
const keywords =
  "Rose Room, Guitar Solo, Jazz Gitarre, Gitarrennoten, PDF Download";
const pageUrl = getPageUrl(Astro);

// Produktdaten
const priceGross = "4,95";
const priceNet = "4,01";
const vat = "0,94";
---

<BaseLayout
  pageTitle={pageTitle}
  description={description}
  keywords={keywords}
  href={pageUrl}
  ogTitle={pageTitle}
  ogDescription={description}
  ogUrl={pageUrl}
  ogType="product"
  twitterTitle={pageTitle}
  twitterDescription={description}
  twitterUrl={pageUrl}
>
  <h1>Rose Room – Guitar Solo</h1>

  <img
    src="/bilder/Anfang.jpg"
    alt="Rose Room – Guitar Solo Vorschau"
    class="product-image"
  />

  <p>
    Hol dir die <strong>
      Noten Rose Room Solo + Rose Room Rhythm Guitar + Rose Room Bass +
      BackingTrack + Rose Room Mastering
    </strong> für dein Gitarrenspiel.
    <br />
    Sofortiger Download nach Zahlung.
  </p>

  <ul>
    <li>✔ Klar notiertes Guitar Solo</li>
    <li>✔ Für Unterricht & Selbststudium</li>
    <li>✔ Sofortiger Download nach Zahlung</li>
  </ul>

  <table class="price-table">
    <tr>
      <th>Produkt</th>
      <td>Rose Room – Guitar Solo (PDF)</td>
    </tr>
    <tr>
      <th>Preis netto</th>
      <td>{priceNet} €</td>
    </tr>
    <tr>
      <th>19 % MwSt</th>
      <td>{vat} €</td>
    </tr>
    <tr>
      <th>Gesamtpreis</th>
      <td><strong>{priceGross} €</strong></td>
    </tr>
  </table>

  <p class="vat-note">inkl. 19 % MwSt. – digitales Downloadprodukt</p>

  <PaypalButton
    itemName="Rose Room – Guitar Solo (PDF)"
    amount={priceGross}
    returnUrl="https://www.musicstudio-ziebart.de/download/rose-room/"
  />

  <p class="vat-note">
    <small>
      Rechnung mit ausgewiesener MwSt. auf Anfrage per E-Mail erhältlich.
    </small>
  </p>

  <p>
    <a href="/" class="normal-links">← Zurück zur Startseite</a>
  </p>
</BaseLayout>
