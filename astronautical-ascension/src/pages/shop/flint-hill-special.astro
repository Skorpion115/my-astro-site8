---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPageUrl } from "../../utils/getPageUrl.js";

const pageTitle = "Flint Hill Special Banjo Solo – Tabulatur kaufen | Musicstudio Ziebart";
const description = "Banjosolo zu »Flint Hill Special« als PDF. Ideal für Bluegrass Banjo Picker. Sofort-Download nach Zahlung.";
const keywords =
  "Flint Hill Special, Banjo Solo, Bluegrass Banjo, Tabulatur, PDF Download";
const pageUrl = getPageUrl(Astro);

// Produktdaten (sauber als Zahlen)
const priceGross = 2.50;

// PayPal-Daten
const itemName = "Flint Hill Special – Banjo Solo (PDF)";
const returnUrl = "https://www.musicstudio-ziebart.de/download/flint-hill-special/";
const paypalBusiness = "musikstudio.ziebart@gmail.com";
---
<BaseLayout
  pageTitle={pageTitle}
  description={description}
  keywords={keywords}
  href={pageUrl}
  ogTitle={pageTitle}
  ogDescription={description}
  ogUrl={pageUrl}
  ogType="product"
  twitterTitle={pageTitle}
  twitterDescription={description}
  twitterUrl={pageUrl}
>
  <h1>Flint Hill Special – Banjo Solo</h1>

  <p>
    Hol dir die <strong>Tabulatur zu Flint Hill Special Solo</strong> für dein Banjospiel.
    <br />
    Sofortiger Download nach Zahlung.
  </p>

  <ul>
    <li>✔ Klar notiertes Banjo Solo</li>
    <li>✔ Für Unterricht & Selbststudium</li>
    <li>✔ Sofortiger Download nach Zahlung</li>
  </ul>

  <table class="price-table">
    <tr>
      <th>Produkt</th>
      <td>Flint Hill Special – Banjo Solo (PDF)</td>
    </tr>
    <tr>
      <th>Gesamtpreis</th>
      <td><strong>{priceGross.toFixed(2)} €</strong></td>
    </tr>
  </table>

  <p class="small">
    Gemäß § 19 Abs. 1 UStG wird keine Umsatzsteuer berechnet.
  </p>

  <!-- PayPal Button OHNE Komponente -->
  <form
    action="https://www.paypal.com/cgi-bin/webscr"
    method="post"
    target="_top"
  >
    <input type="hidden" name="cmd" value="_xclick" />
    <input type="hidden" name="business" value={paypalBusiness} />
    <input type="hidden" name="item_name" value={itemName} />
    <input type="hidden" name="amount" value={priceGross} />
    <input type="hidden" name="currency_code" value="EUR" />
    <input type="hidden" name="return" value={returnUrl} />
    <input type="hidden" name="no_shipping" value="1" />
    <input type="hidden" name="charset" value="utf-8" />
    <input type="hidden" name="lc" value="DE" />

    <button type="submit" class="paypal-button">
      Jetzt mit PayPal kaufen
    </button>
  </form>

  <p class="vat-note">
    <small>
      Rechnung mit ausgewiesener MwSt. auf Anfrage per E-Mail erhältlich.
    </small>
  </p>

  <p>
    <a href="/" class="normal-links">← Zurück zur Startseite</a>
  </p>
</BaseLayout>
