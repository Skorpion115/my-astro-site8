---
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Kostenlose Probestunde buchen";
const SITE_URL = import.meta.env.SITE_URL || "https://www.musicstudio-ziebart.de";
const pageUrl = `${SITE_URL}/contact_2/`;
---

<BaseLayout
  pageTitle={pageTitle}
  description="Kostenloase Probestunde"
  keywords="Probestunde"
  href={pageUrl}
>
  <p>
    Aus hygienischen Gründen können bei Blasinstrumente keine Instrumente zur
    Verfügung gestellt werden.
  </p>
  <div class="container1">
    <form
      name="contact_2"
      method="POST"
      action="/thankyou/"
      data-netlify="true"
      netlify-honeypot="bot-field"
    >
      <!-- Honeypot field (invisible to users) -->
      <p style="display:none">
        <label
          >Don’t fill this out if you're human: <input
            name="bot-field"
          /></label
        >
      </p>
      <input type="hidden" name="form-name" value="contact_2" />
      <fieldset>
        <legend>Data</legend>
        <div class="form-element"></div>
        <br />
        <div>
          <label for="subject">Betreff:</label>
          <input
            name="subject"
            type="text"
            id="subject"
            maxlength="40"
            placeholder="Hier den Betreff eintragen"
            class="form-control form-control-lg"
            required
          />
        </div>
        <br />
        <div class="form-element">
          <label for="born">Geburtsdatum:</label>
          <input
            type="date"
            autocomplete="bday-day"
            name="born"
            id="born"
            class="form-control form-control-lg"
          />
        </div>
        <br />
        <div class="form-element">
          <label for="desired_date">Wunschtermin:</label>
          <input
            type="datetime-local"
            name="desired_date"
            id="desired_date"
            class="form-control form-control-lg"
            required
          />
        </div>
        <br />
        <div class="form-element">
          <label for="phone">Telefon:</label>
          <input
            type="tel"
            autocomplete="tel-national"
            name="phone"
            id="phone"
            class="form-control form-control-lg"
            required
          />
        </div>
        <br />
        <div>
          <label for="instrument">Instrument:</label>
          <input
            type="text"
            name="instrument"
            id="instrument"
            class="form-control form-control-lg"
            required
          />
        </div>
        <div>
          <label for="email">Email:</label>
          <input
            type="email"
            autocomplete="email"
            name="email"
            Reply-to
            id="email"
            class="form-control form-control-lg"
            required
          />
        </div>
        <div>
          <br />
          <label for="message">Nachricht:</label>
          <textarea
            name="message"
            id="message"
            cols="23"
            rows="10"
            class="form-control"
            placeholder="Wenn Sie wollen schreiben Sie hier eine Nachricht..."
          ></textarea>
        </div>
      </fieldset>
      <fieldset>
        <legend>Adresse</legend>
        <div>
          <label for="fname">Vorname:</label>
          <input
            type="text"
            autocomplete="given-name"
            name="fname"
            id="fname"
            class="form-control form-control-lg"
            required
          />
        </div>
        <br />
        <div>
          <label for="lname">Nachname:</label>
          <input
            type="text"
            autocomplete="family-name"
            name="lname"
            id="lname"
            class="form-control form-control-lg"
            required
          />
        </div>
        <br />
        <div>
          <label for="street">Strasse:</label>
          <input
            type="text"
            autocomplete="street-address"
            name="street"
            id="street"
            maxlength="22"
            class="form-control form-control-lg"
            required
          />
        </div>
        <br />
        <div>
          <label for="place">Ort:</label>
          <input
            type="text"
            autocomplete="address-level2"
            name="place"
            id="place"
            maxlength="20"
            class="form-control form-control-lg"
            required
          />
        </div>
        <br />
        <div>
          <label for="postal_code">Postleitzahl:</label>
          <input
            type="number"
            name="postal_code"
            autocomplete="postal-code"
            id="postal_code"
            class="form-control form-control-lg"
            required
          />
        </div>
      </fieldset>
      <br />
      <fieldset>
        <div>
          <label for="parents">Eltern:</label>
          <input
            type="text"
            name="parents"
            id="parents"
            class="form-control form-control-lg"
          />
        </div>
        <br />
      </fieldset>
      <br />

      <div>
        <button type="submit" class="btn btn-lg btn-primary">Senden</button>
      </div>
    </form>
  </div>

