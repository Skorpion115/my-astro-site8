---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getPageUrl } from "../utils/getPageUrl.js";

const pageTitle = "Anmeldung";
const description = "Melden Sie sich hier für unsere Kurse an!";
const keywords = "anmeldung, kursanmeldung, musikschule";
const pageUrl = getPageUrl(Astro);
---

<BaseLayout
  pageTitle={pageTitle}
  description={description}
  keywords={keywords}
  href={pageUrl}
  ogTitle={pageTitle}
  ogDescription={description}
  ogUrl={pageUrl}
  ogType="website"
  twitterTitle={pageTitle}
  twitterDescription={description}
  twitterUrl={pageUrl}
>
  <div class="container4">
    <form
      name="anmeldung-form"
      method="POST"
      data-netlify="true"
      netlify-honeypot="bot-field"
      action="/thankyou/"
    >
      <!-- Honeypot field (versteckt für Bots) -->
      <p style="display:none">
        <label>Bitte nicht ausfüllen: <input type="text" name="_honey" /></label>
      </p>

      <!-- Pflichtfeld für Netlify -->
      <input type="hidden" name="form-name" value="anmeldung-form" />
      <input type="hidden" name="_next" value="https://www.musicstudio-ziebart.de/thankyou/" />

      <div>
        <label for="name">Name:</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Name eintragen"
          autocomplete="name"
          class="form-control form-control-lg"
          required
        />
      </div>

      <div>
        <label for="email">E-Mail:</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="E-Mail"
          autocomplete="email"
          class="form-control form-control-lg"
          required
        />
      </div>

      <div>
        <label for="phone">Telefonnummer:</label>
        <input
          type="tel"
          id="phone"
          name="phone"
          placeholder="Telefonnummer"
          autocomplete="tel-national"
          class="form-control form-control-lg"
        />
      </div>

      <div>
        <label>
          <input type="checkbox" name="consent" required />
          Ich stimme der Verarbeitung meiner Daten gemäß der
          <a href="/datenschutz/" target="_blank">Datenschutzerklärung</a>
          zu.
        </label>
      </div>

      <br />
      <button type="submit" class="btn btn-lg btn-primary">Absenden</button>
    </form>
  </div>
</BaseLayout>
