<script nonce={nonce}>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  // Consent Mode Standardwerte setzen (alle auf "denied", wenn der Benutzer noch nicht zugestimmt hat)
  gtag("consent", "default", {
    ad_storage: "denied",
    analytics_storage: "denied",
    personalization_storage: "denied",
    ad_personalization: "denied",
    ad_user_data: "denied"
  });

  

  // Google Analytics Konfiguration für GA4 Property, aber ohne Seitenaufruf
  //gtag("config", "GT-MR4MFC6", { "anonymize_ip": true, "send_page_view": true });
  // Function to initialize Google Analytics
  function initializeGoogleAnalytics() {
  gtag("config", "GT-MR4MFC6", {
    anonymize_ip: true,
    currency: "EUR",
    region: "EU",
    send_page_view: true,  // Sollte eigentlich reichen
    linker: {
      domains: ["musicstudio-ziebart.de", "www.musicstudio-ziebart.de"],
    },
  });

  // Falls GA4 das `send_page_view` ignoriert, einmal manuell auslösen:
  gtag("event", "page_view", {
    page_location: window.location.href,
    page_path: window.location.pathname,
    page_title: document.title
  });

  console.log("Google Analytics wurde geladen und Page View gesendet.");
}

  

  // Function to initialize Google AdWords
   
  function initializeGoogleAdWords() {
    gtag("config", "GT-5TG3DK3", {
      anonymize_ip: true,
      currency: "EUR",
      region: "EU",
      send_page_view: true,  // <- WICHTIG: Page View senden
      linker: {
        domains: ["musicstudio-ziebart.de", "www.musicstudio-ziebart.de"]
      }
    });
  }
</script>
